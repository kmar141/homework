<form action="/students/<%= @student.id %>" method="POST">


  <label for="first_name">First name: </label>
  <input type="text" id="first_name" name="first_name" value = "<%=@student.first_name%>">

  <label for="last_name">Last name: </label>
  <input type="text" id="last_name" name="last_name" value = "<%=@student.last_name%>">

  <label for="age">Age: </label>
  <input type="number" id="age" name="age" value = "<%=@student.age%>">

  <label for="house-select">Select a house:</label>
  <select name="house_name" id="house-select">
    <%for house in @houses%>
    <% if house.name == @student.house.name%>
      <option selected value="<%=house.id%>"><%=house.name%></option>
    <% else %>
      <option value="<%=house.id%>"><%=house.name%></option>
    <% end %>
    <% end %>

  </select>


  <input type="submit" value="Edit Student">